<Window x:Class="BmpToJpg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BmpToJpg"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="변환할 파일 경로 설정" HorizontalAlignment="Left" Margin="35,35,0,0" VerticalAlignment="Top" Width="143" Click="Btn_Select_Path"/>
        <TextBlock HorizontalAlignment="Left" Margin="208,42,0,0" TextWrapping="Wrap" Text="{Binding SelectedPath}" VerticalAlignment="Top"/>

        <Button Content="압축률" HorizontalAlignment="Left" Margin="35,121,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="138,121,0,0" TextWrapping="Wrap" Text="{Binding Quality}" VerticalAlignment="Top" Width="120"/>
        
        <Button Content="저장 경로 설정" HorizontalAlignment="Left" Margin="35,71,0,0" VerticalAlignment="Top" Width="143" Click="Btn_Save_Path"/>
        <TextBlock HorizontalAlignment="Left" Margin="208,74,0,0" TextWrapping="Wrap" Text="{Binding SavePath}" VerticalAlignment="Top"/>


        <Button Content="Bmp->Jpg" HorizontalAlignment="Left" Margin="707,389,0,0" VerticalAlignment="Top" Width="75" Click="Btn_Convert"/>

    </Grid>
</Window>
